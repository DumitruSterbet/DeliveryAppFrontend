# Environment Configuration for SignalR
# Copy this to .env.local and update with your actual values

# SignalR Hub URL - Use HTTP/HTTPS (not WSS) - SignalR handles WebSocket upgrade automatically
# For development with self-signed cert, you might need: http://localhost:7227/hubs/notifications
VITE_SIGNALR_HUB_URL=https://localhost:7227/hubs/notifications

# Set to true to enable SignalR real-time notifications (default: false for stability)
VITE_ENABLE_SIGNALR=false

# Optional: Set to true in development for more detailed logging
VITE_SIGNALR_DEBUG=true